<h1>Menu</h1>
<div class="row">
  <div class="btn-group" role="group">
    <%= link_to "All",menu_path, class: "btn #{params[:section_id] == nil ? 'btn-primary':'btn-secondary'}"%>
    <% @sections.each do |section| %>
      <%= link_to section.name,menu_path(section_id: section.id), 
        class: "btn #{params[:section_id] == section.id.to_s ? 'btn-primary' : 'btn-secondary'}"%>
    <% end %>
  </div>
</div>
<%= render @food_items %>