<div class="row">
  <div class="col-md-12">
    <h3>Thank you for your order</h3>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p>
      <strong>Name:</strong>
      <%= @order.name %>
    </p>
    <p>
      <strong>Phone:</strong>
      <%= @order.phone %>
    </p>
    <p>
      <strong>Address:</strong>
      <%= @order.address %>
    </p>
    <p>
      <strong>email:</strong>
      <%= @order.email %>
    </p>
    <p>
      <strong>Created at:</strong>
      <%= @order.created_at.strftime('%B %d, %Y') %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Food</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each_with_index do |item,index| %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= item.food_item.name %></td>
            <td><%=item.quantity%></td>
            <td><%=number_to_currency(item.total)%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= link_to 'Back', orders_path %>